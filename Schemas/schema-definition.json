{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "scaffolder-schema-definition",
  "title": "Scaffolder Schema Definition",
  "description": "Framework-agnostic schema definition for generating database schemas",
  "type": "object",
  "required": ["name", "tables"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for this schema module"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "requires": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Other schema modules this depends on"
    },
    "tables": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/table"
      }
    }
  },
  "definitions": {
    "table": {
      "type": "object",
      "required": ["columns"],
      "properties": {
        "description": { "type": "string" },
        "columns": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/column"
          }
        },
        "indexes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/index"
          }
        }
      }
    },
    "column": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["uuid", "varchar", "text", "integer", "bigint", "boolean", "timestamp", "date", "json", "jsonb"]
        },
        "length": { "type": "integer" },
        "primary": { "type": "boolean" },
        "unique": { "type": "boolean" },
        "nullable": { "type": "boolean" },
        "default": { "type": "string" },
        "description": { "type": "string" },
        "references": {
          "type": "object",
          "required": ["table", "column"],
          "properties": {
            "table": { "type": "string" },
            "column": { "type": "string" },
            "onDelete": {
              "type": "string",
              "enum": ["CASCADE", "SET NULL", "RESTRICT", "NO ACTION"]
            },
            "onUpdate": {
              "type": "string",
              "enum": ["CASCADE", "SET NULL", "RESTRICT", "NO ACTION"]
            }
          }
        }
      }
    },
    "index": {
      "type": "object",
      "required": ["columns"],
      "properties": {
        "name": { "type": "string" },
        "columns": {
          "type": "array",
          "items": { "type": "string" }
        },
        "unique": { "type": "boolean" }
      }
    }
  }
}
